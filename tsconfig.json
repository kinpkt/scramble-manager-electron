{
  "compilerOptions": {
    // Base directory and aliases
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    // Module & target
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    // Type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // Output (for Next.js we usually don't emit)
    "noEmit": true,
    "incremental": true,

    // Libs
    "lib": ["dom", "dom.iterable", "esnext"],

    // JS support
    "allowJs": true,

    // Plugins (Next.js)
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
